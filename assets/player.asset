GameObject:
  tag: Player
  components:
  - $MeshRenderer
  - $Transform
  - $PlayerController
  - $SphereCollider
  - $RigidBody
  - $Health
MeshRenderer:
  mesh: meshes\player.glb$Mesh
  material: materials\scifi.asset
Transform:
  pos: [0,0.5,0]
  euler: [0, 60, 0]
  scale: [0.7, 0.7, 0.7]
PlayerController:
  speed: 5
  jumpVelocity: 5.0
  jumpPushImpulse: 500
  jumpPushRadius: 10
  bulletSpawnOffset: 0.5
  shootingLightPrefab: ShootingLight.asset
  shootingLightOffset: [0, 1, 3]
  bulletSpeed: 20
  healPerSecond: 5
  startGun: gun_pistol.asset$Gun
  postprocessingEffect: playerHealthEffect.asset
  grenadePrefab: grenade.asset
  shootingSounds:
  - sounds\shooting (1).wav
  - sounds\shooting (2).wav
  - sounds\shooting (3).wav
  footstepSounds:
  - sounds\footstep (1).wav
  - sounds\footstep (2).wav
  - sounds\footstep (3).wav
  - sounds\footstep (4).wav
  - sounds\footstep (5).wav
  - sounds\footstep (6).wav
  - sounds\footstep (7).wav
  - sounds\footstep (8).wav
SphereCollider:
  radius: 1
  center: [0, 0.5, 0]
RigidBody:
  isStatic: false
  isKinematic: false
  restitution: 0.0
  friction: 0.0
  mass: 50
  layer: player
PointLight:
  color: 0xffffffff
  radius: 10
  innerRadius: 0.0
Health:
  amount: 5
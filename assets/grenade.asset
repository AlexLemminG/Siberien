GameObject:
  components:
  - $MeshRenderer
  - $Transform
  - $SphereCollider
  - $RigidBody
  - $Grenade
  - $PointLight
  - $Pickup
MeshRenderer:
  mesh: meshes\grenade.glb$Mesh
  material: materials\scifi.asset
Transform:
  scale: [1,1,1]
SphereCollider:
  radius: 1.5
RigidBody:
  mass: 2
  layer: grenade
Grenade:
  radius: 6
  pushImpulse: 1000
  explodeOnCollision: false
  explodeDelay: 3
  startSpeed: 30
  damage: 3
PointLight:
  color: 0xff0000ff
  radius: 5
  innerRadius: 0.0